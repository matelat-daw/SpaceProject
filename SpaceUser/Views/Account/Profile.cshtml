@using Microsoft.AspNetCore.Identity;
@using SpaceUser.Models.User
@inject UserManager<SpaceUser> UserManager
@model Register

@{
    ViewData["Title"] = "Perfil del Usuario";
}

<div class="text-center">
    <h1 class="display-4">Puedes Modificar o Eliminar tu Perfil</h1>
    <br />
    @{
        var user = await UserManager.GetUserAsync(User);
    }
</div>
<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-info">Regístrate</h2>
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@user.Id" name="Id" />
            <div class="mb-1">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value="@user.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Surname1" class="control-label"></label>
                <input asp-for="Surname1" value="@user.Surname1" class="form-control" />
                <span asp-validation-for="Surname1" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Surname2" class="control-label"></label>
                <input asp-for="Surname2" value="@user.Surname2" class="form-control" />
            </div>
            <div class="mb-1">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" value="@user.Email" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password2" class="control-label"></label>
                <input asp-for="Password2" class="form-control" />
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" value="@user.PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Bday" class="control-label"></label>
                <input type="date" asp-for="Bday" value="@user.Bday.ToString("yyyy-MM-dd")" class="form-control" rows="2" />
                <span asp-validation-for="Bday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImageFile" class="control-label"></label>
                <input asp-for="ProfileImageFile" class="form-control" type="file" />
                <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <input type="submit" value="Modificar Mis Datos" class="btn btn-primary btn-sm float-end" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card p-3">
            <h2 class="text-center text-info">Eliminar Perfil</h2>
            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm float-end">Eliminar Mi Perfil</a>
        </div>
    </div>
</div>